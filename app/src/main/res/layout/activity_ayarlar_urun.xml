<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BBC8C1"
    android:layout_height="match_parent"
    tools:context=".AyarlarUrunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonMenu"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Menuyu gör" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EFFCFF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="12pt"
                    android:text="Ürün Ekleme"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:text="Ürün İsmi:"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/edit_text_ekle"
                    android:layout_gravity="center"
                    android:hint="ör: Kola, Çay"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_weight="1"
                    android:text="Ürün Sınıfı:"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerEkleSinif"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:text="Alış Fiyatı:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/editTextNumberDecimal_ekleAlis"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:hint="TL"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:text="Satış Fiyatı:"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/editTextNumberDecimal_ekleSatis"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:hint="TL"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="Depo-Adisyon"
                />

            <Button
                android:id="@+id/buttonEkle"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="EKLE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#BCF2FF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:text="Ürün Güncelleme"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Ürün Sınıfı:"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerUpdateSinif"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Ürün İsmi:"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerUpdateIsim"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:text="Yeni Alış Fiyatı:"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/editTextNumberDecimal_updateAlis"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="TL"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Yeni Satış Fiyatı:"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/editTextNumberDecimal_updateSatis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:hint="TL"
                    android:ems="10"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Kaydet" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EFFCFF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView0"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:textSize="12pt"
                    android:text="Ürün Silme"
                    android:layout_width="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSilSinif"
                    android:layout_weight="1"
                    android:text="Ürün Sınıfı:"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerSilSinif"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:text="Ürün İsmi:"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:layout_gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerSil"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonSil"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="SİL" />
        </LinearLayout>



    </LinearLayout>
</androidx.core.widget.NestedScrollView>