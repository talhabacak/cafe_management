<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AyarlarUrunActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menuyu gör" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14pt"
                android:text="Ürün Ekleme"
                android:layout_width="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Ürün İsmi:"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/edit_text_ekle"
                android:hint="ör: Kola, Çay"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:text="Ürün Sınıfı:"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <Spinner
                android:id="@+id/spinnerEkleSinif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Alış Fiyatı:"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNumberDecimal_ekleAlis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="TL"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:text="Satış Fiyatı:"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNumberDecimal_ekleSatis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="TL"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonEkle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="EKLE" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:paddingTop="15dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="14pt"
                android:layout_weight="3"
                android:text="Ürün Güncelleme"
                android:layout_width="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:text="Ürün İsmi:"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <Spinner
                android:id="@+id/spinnerUpdateIsim"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:text="Ürün Sınıfı:"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <Spinner
                android:id="@+id/spinnerUpdateSinif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:text="Alış Fiyatı:"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNumberDecimal_updateAlis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="TL"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="numberDecimal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:text="Satış Fiyatı:"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <EditText
                android:id="@+id/editTextNumberDecimal_updateSatis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="TL"
                android:ems="10"
                android:inputType="numberDecimal" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kaydet" />

        <TextView
            android:id="@+id/textView0"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:textSize="14pt"
            android:text="Ürün Silme"
            android:layout_width="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:text="Ürün İsmi:"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingLeft="20dp"
                android:layout_height="match_parent"
                android:layout_width="0dp" />

            <Spinner
                android:id="@+id/spinnerSil"
                android:paddingRight="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/buttonSil"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="SİL" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>