<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnaSayfaActivity">

    <TextView
        android:id="@+id/TextViewAna"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:textSize="30pt"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_height="170dp"
        android:text="ANA MENU"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/TextViewMasalar"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:background="#8BC34A"
        android:contextClickable="true"
        android:text="MASALAR"
        android:textAlignment="center"
        android:textSize="16pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextViewDepo"
        android:layout_width="300dp"
        android:background="#6BF477"
        android:textSize="16pt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:text="DEPO" />

    <TextView
        android:id="@+id/TextViewManage"
        android:textAlignment="center"
        android:layout_width="300dp"
        android:textSize="16pt"
        android:textStyle="bold"
        android:background="#6BF477"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:text="YÖNETİM"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/TextViewGelirGider"
        android:layout_width="300dp"
        android:textAlignment="center"
        android:textSize="16pt"
        android:textStyle="bold"
        android:background="#6BF477"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_height="70dp"
        android:text="GELİR-GİDER" />

    <TextView
        android:textAlignment="center"
        android:textSize="12pt"
        android:id="@+id/TextViewKisisel"
        android:layout_width="300dp"
        android:background="#6BF477"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_height="70dp"
        android:text="KİŞİSEL GELİR-GİDER" />

</androidx.appcompat.widget.LinearLayoutCompat>