<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepoBitenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:background="#3B5078"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Depoda Biten Ürünler" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#2A4A57"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewUrun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12pt"
                android:textColor="#A3A09F"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="italic|bold"
                android:text="Ürün" />

            <TextView
                android:id="@+id/textViewAdet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#A3A09F"
                android:layout_margin="5dp"
                android:textSize="12pt"
                android:gravity="center"
                android:textStyle="italic|bold"
                android:text="Adet" />

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/depo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D2E6E6">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>