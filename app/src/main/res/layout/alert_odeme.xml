<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFE3E3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/uyari"
        android:textColor="@color/black"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Uygulamayı kullanamazsınız, verileriniz 1 hafta içinde silinecek." />
    <TextView
        android:id="@+id/mail"
        android:textStyle="bold"
        android:textColor="#BA0000"
        android:layout_margin="5dp"
        android:textSize="8pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İletişime Geçin (Please Contact):\n management.product.app@gmail.com " />

    <Button
        android:id="@+id/buttonAlert"
        android:layout_margin="15dp"
        android:textColor="#00095C"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tamam" />

</LinearLayout>