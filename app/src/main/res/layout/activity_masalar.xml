<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF5"
    android:orientation="vertical"
    tools:context=".MasalarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewMasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60594B"
            android:textColor="#B5B3AF"
            android:textSize="16pt"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Masalar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F3DDB4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Masa Sınıfı :"
                    android:layout_marginLeft="20dp"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="12pt"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:layout_width="0dp"
                    android:id="@+id/spinnerSinif"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                     android:layout_weight="1"
                    android:layout_height="match_parent"/>

            </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/masalar"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:numColumns="auto_fit"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="15dp"
        android:columnWidth="150dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/masaTasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_shape"
            android:textSize="7pt"
            android:textColor="#FFCBA0"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Masa Taşı : Kapalı"
            />

        <TextView
            android:id="@+id/masaBirlestir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottom_shape"
            android:textSize="7pt"
            android:textColor="#AE7240"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Masa Birleştir : Kapalı"
            />

    </LinearLayout>

</LinearLayout>