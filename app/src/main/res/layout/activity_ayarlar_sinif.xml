<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AyarlarSinifActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9F4EF"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textViewEkle"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16pt"
                android:gravity="center"
                android:text="Ürün Sınıfı Ekle"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_ekle"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:text="Ürün Sınıfı İsmi:"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/edit_text_ekle"
                    android:hint="ör: İçecek, Yiyecek"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonEkle"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="EKLE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6FFFD"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView_Guncelle"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16pt"
                android:text="Ürün Sınıfı Güncelle"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_isimEski"
                    android:layout_weight="1"
                    android:text="Ürün Sınıfı İsmi:"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:layout_height="35dp"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerGuncelle"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView_isimYeni"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:text="Yeni Ürün Sınıfı İsmi:"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <EditText
                    android:id="@+id/edit_text_isimYeni"
                    android:hint="ör: Sıcak, Yiyecek"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_width="0dp" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonUpdate"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="Kaydet" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#D9F4EF"
            >
            <TextView
                android:id="@+id/textView0"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16pt"
                android:text="Ürün Sınıfı Sil"
                android:layout_width="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:text="Ürün Sınıfı İsmi:"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_width="0dp" />

                <Spinner
                    android:id="@+id/spinnerSil"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <Button
                android:id="@+id/buttonSil"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="Sil" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>